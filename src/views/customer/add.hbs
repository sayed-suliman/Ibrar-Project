{{>header}}

{{#if success}}
<div class="toast-container position-fixed top-0 end-0 p-3">
    <div id="showMessage" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto text-success">Success</strong>
            {{!-- <small>11 mins ago</small> --}}
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            The customer has been saved.
            {{success}}
        </div>
    </div>
</div>
{{/if}}
{{#if error}}
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="showMessage" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto text-danger">Error</strong>
            {{!-- <small>11 mins ago</small> --}}
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            {{error}}
        </div>
    </div>
</div>
{{/if}}













{{!-- start container --}}
<div class="container my-5">
    <h1 class="text-center my-5">
        Offered By Ibrar
    </h1>
    <div class="text-center mb-2">

        <button class="btn btn-primary">Go to Homepage</button>
    </div>
    <!-- Start Card -->
    <div class="card">
        <!-- Start Card Body -->
        <div class="card-body">
            <!-- Start Form -->
            <form id="bookingForm" action="/customer" method="post" class="needs-validation" novalidate
                autocomplete="off">
                <div class="form-row row">
                    <!-- Start PP NUM Name -->
                    <div class="form-group col-md-6">
                        <label for="pp_num">PP NUM</label>
                        <input type="text" class="form-control" id="pp_num" name="pp_num" placeholder="Enter PP Number"
                            required />
                        <small class="form-text text-muted">Please fill customer pp number</small>
                    </div>
                    <!-- End PP NUM Name -->

                    <!-- Start customer_name -->
                    <div class="form-group col-md-6">
                        <label for="customer_name">Customer Name </label>
                        <input type="text" class="form-control" id="customer_name" name="customer_name"
                            placeholder="Enter Customer Name" required />
                        <small class="form-text text-muted">Please fill Customer Name</small>
                    </div>
                    <!-- Endcustomer_name Name -->
                </div>
                {{!-- 2nd row --}}
                <div class="form-row row">
                    <!-- Start Input Telephone -->
                    <div class="form-group col-md-6">
                        <label for="customer_mob">Customer Mob</label>
                        <input type="tel" class="form-control" id="customer_mob" name="customer_mob"
                            placeholder="099xxxxxxx" required />
                        <small class="form-text text-muted">Please fill Telephone Number.</small>
                    </div>
                    <!-- End Input Telephone -->


                    <!-- Start Supplier  -->
                    <div class="form-group col-md-6">
                        <label for="supplier">Supplier</label>
                        <input type="text" class="form-control" id="supplier" name="supplier"
                            placeholder="Enter Supplier" required />
                        <small class="form-text text-muted">Please fill Supplier Field</small>
                    </div>
                    <!-- Endcustomer_name Name -->
                </div>

                {{!--3rd row --}}
                <!-- Start Input Date , Start Time and End Time -->
                <div class="form-row row">
                    <!-- Start Input Date -->
                    <div class="form-group col-md-6">
                        <label for="startDate">Start Date</label>
                        <input type="date" class="form-control" id="start_date" name="start_date" required />
                        <small class="form-text text-muted">Please choose Start Date.</small>
                    </div>
                    <!-- End Input Date -->

                    <!-- StartTo Date -->

                    <div class="form-group col-md-6">
                        <label for="end_date">End Date</label>
                        <input type="date" class="form-control" id="end_date" name="end_date" required />
                        <small class="form-text text-muted">Please choose date and time for meeting.</small>
                    </div>
                    <!-- EndTo Date -->
                </div>
                <!-- End Input Date , Start Time and End Time -->

                <hr />


                <!-- Start Input Remark -->
                <div class="form-group">
                    <label for="textAreaRemark">Notes</label>
                    <textarea class="form-control" name="note" id="textAreaRemark" rows="3"
                        placeholder="Tell us you want more..."></textarea>
                    <small class="form-text text-muted">Optional.</small>
                </div>
                <!-- End Input Remark -->

                <!-- Start Submit Button -->
                <div class="text-center mt-5">

                    <button class="btn btn-primary btn-block col-lg-2 mx-auto" type="submit">Submit</button>
                </div>
                <!-- End Submit Button -->
            </form>
            <!-- End Form -->
        </div>
        <!-- End Card Body -->
    </div>
</div>


<!-- Start Scritp for Form -->
<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.getElementsByClassName('needs-validation');
            // Loop over them and prevent submission
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();

